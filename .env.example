# CAMARA FastMCP Server Configuration
# Copy this to .env and fill with your credentials

# CAMARA Operator Settings (REQUIRED)
CAMARA_BASE_URL=https://api.example-operator.com
CAMARA_API_KEY=your-bearer-token-here

# Optional: Specific operator endpoints
# Orange: https://api.orange.com/camara
# Telefonica: https://opengateway.telefonica.com
# Vodafone: https://api.vodafone.com/camara

# CAMARA Version (REQUIRED)
# Options: spring25 | fall25
CAMARA_VERSION=spring25

# HTTP Timeout (Optional)
CAMARA_TIMEOUT=30

# Server Mode Settings (Optional)
# MCP_SERVER_HOST=0.0.0.0
# MCP_SERVER_PORT=8000
